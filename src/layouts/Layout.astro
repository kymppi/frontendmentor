---
import Attribution from '../components/Attribution.astro';

export interface Props {
  title?: string;
  faviconPath?: string;
  class?: string;
  attribution?: boolean;
}

const {
  title = "Midka's FrontendMentor.io projects",
  faviconPath,
  class: className,
  attribution = true,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="32x32" href={faviconPath} />
    <title>{title}</title>
  </head>
  <body>
    <main class={className}>
      <slot />
      {attribution && <Attribution />}
    </main>
  </body>
</html>
